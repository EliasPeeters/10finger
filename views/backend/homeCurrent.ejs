    <img class="cover" src="/assets/img/bookcover/<%= data.cover %>">
    <div>
        <p class="title"><%= data.name %></p>
        <p class="author"><%= data.author %><%= data.description %></p>
    </div>

    <% if (data.progress !== undefined) { %>
    <div class="piebackground home" style="--p:100"><%= Math.ceil(data.progress * 1000) / 10 %> %</div>

    <div class="pie home" style="--p:<%= Math.round(data.progress * 1000) / 10 %>"> </div>    

    <% } %>