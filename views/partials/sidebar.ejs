
<div id="sidebar" class="<% if (!data.loggedIn) { %>sidebarSmall<% } %>">
    

    <% if (!data.loggedIn) { %>
        <button class="button one sidebarButton" onclick="openLogin()">Login</button>
        <button class="button two sidebarButton" onclick="openRegister()">Register</button>
    <% } else { %>
        <button class="button one sidebarButton" onclick="openSidebar('profile')">Profile</button><br>
        <button class="button two sidebarButton" onclick="openSidebar('textSelector')">Text Selector</button><br>
        <button class="button three sidebarButton" onclick="openSidebar('settings')">Settings</button><br>
        <button class="button one sidebarButton" onclick="window.location = '/logout'">Logout</button>
    <% } %> 
    <div id="sidebarContent">
        
    </div>
</div>

